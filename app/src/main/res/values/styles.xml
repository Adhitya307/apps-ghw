<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <!-- Tambahkan style untuk PLN AlertDialog -->
    <style name="PLNAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/pln_primary</item>
        <item name="colorPrimaryDark">@color/pln_primary_dark</item>
        <item name="colorAccent">@color/pln_primary</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@drawable/dialog_bg</item>
    </style>
</resources>