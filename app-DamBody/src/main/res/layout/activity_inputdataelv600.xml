<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF">

    <!-- ScrollView untuk konten utama -->
    <ScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F9FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header dengan PLN Logo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo_pln"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ELV 600 Monitoring - DAM BODY"
                    android:textColor="#0054A6"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- SECTION: Pilih Data Pengukuran -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih Data Pengukuran"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spinnerPengukuran"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@drawable/spinner_dropdown_background"
                        android:dropDownVerticalOffset="4dp"
                        android:dropDownWidth="match_parent"
                        android:spinnerMode="dropdown"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical|start"/>

                    <Button
                        android:id="@+id/btnPilihPengukuran"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Gunakan Pengukuran Ini"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#0054A6"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION: DMA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DMA"
                        android:textColor="#0054A6"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#0054A6"
                        app:hintTextColor="#0054A6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputDMA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai DMA"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnSubmitDMA"
                        android:text="Simpan DMA"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0054A6"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION: HV Input -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HV Measurements"
                        android:textColor="#0054A6"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginBottom="16dp" />

                    <!-- HV-1 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#0054A6"
                        app:hintTextColor="#0054A6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputHV1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai HV-1"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- HV-2 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#0054A6"
                        app:hintTextColor="#0054A6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputHV2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai HV-2"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- HV-3 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#0054A6"
                        app:hintTextColor="#0054A6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputHV3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai HV-3"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- HV-4 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#0054A6"
                        app:hintTextColor="#0054A6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputHV4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai HV-4"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- HV-5 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#0054A6"
                        app:hintTextColor="#0054A6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputHV5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai HV-5"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TOMBOL SIMPAN SEMUA HV -->
                    <Button
                        android:id="@+id/btnSubmitHVAll"
                        android:text="Simpan Semua HV"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="#2196F3"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button"/>

                    <!-- TOMBOL HITUNG -->
                    <Button
                        android:id="@+id/btnHitung"
                        android:text="Hitung"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:backgroundTint="#FF9800"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Modal Overlay -->
    <View
        android:id="@+id/modalOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"/>

    <!-- Modal Pengukuran -->
    <androidx.cardview.widget.CardView
        android:id="@+id/modalPengukuran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header Modal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Buat Pengukuran Baru"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#0054A6"/>

                    <ImageButton
                        android:id="@+id/btnCloseModal"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_close"
                        android:tint="#0054A6"/>
                </LinearLayout>

                <!-- Form Input Modal -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="#0054A6"
                    app:hintTextColor="#0054A6">

                    <EditText
                        android:id="@+id/modalInputTahun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tahun"
                        android:inputType="number"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="#0054A6"
                    app:hintTextColor="#0054A6"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/modalInputBulan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bulan"
                        android:inputType="none"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="#0054A6"
                    app:hintTextColor="#0054A6"
                    app:endIconMode="dropdown_menu">

                    <AutoCompleteTextView
                        android:id="@+id/modalInputPeriode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Periode (TW)"
                        android:inputType="none"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="#0054A6"
                    app:hintTextColor="#0054A6"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom">

                    <EditText
                        android:id="@+id/modalInputTanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tanggal Pengukuran"
                        android:inputType="none"
                        android:maxLines="1"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/modalBtnSubmitPengukuran"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Buat Pengukuran"
                    android:backgroundTint="#0054A6"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>