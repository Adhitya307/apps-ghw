<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1976D2"
        android:padding="16dp"
        android:orientation="vertical"
        android:elevation="4dp">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitoring Rembesan"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/homeImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_bendungan"
                android:layout_marginBottom="24dp"
                android:contentDescription="Ilustrasi Bendungan" />

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang!"
                android:textColor="#333333"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silakan input data rembesan bendungan"
                android:textColor="#555555"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Tombol HP 1 -->
            <Button
                android:id="@+id/btnInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input HP 1"
                android:backgroundTint="#1976D2"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginBottom="12dp"/>

            <!-- Tombol HP 2 -->
            <Button
                android:id="@+id/btnInputHP2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input HP 2"
                android:backgroundTint="#388E3C"
                android:textColor="#FFFFFF"
                android:padding="12dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:gravity="center">

        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Sistem Monitoring KP"
            android:textColor="#555555"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
