<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF">

    <!-- Overlay untuk background gelap saat modal muncul -->
    <View
        android:id="@+id/modalOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true" />

    <!-- Modal Popup untuk Form Pengukuran -->
    <androidx.cardview.widget.CardView
        android:id="@+id/modalPengukuran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <!-- Header Modal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Form Pengukuran ELV 625"
                    android:textColor="#0054A6"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnCloseModal"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_close"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>

            <!-- Form Input Modal -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="#0054A6"
                app:hintTextColor="#0054A6">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/modalInputTahun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tahun"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="#0054A6"
                app:hintTextColor="#0054A6"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/modalInputBulan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih Bulan"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="#0054A6"
                app:hintTextColor="#0054A6"
                app:endIconMode="dropdown_menu">

                <AutoCompleteTextView
                    android:id="@+id/modalInputPeriode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih Periode"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/modalTanggalContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="#0054A6"
                app:hintTextColor="#0054A6"
                app:startIconDrawable="@drawable/ic_calendar"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconContentDescription="Pilih tanggal hari ini">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/modalInputTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Pengukuran"
                    android:textSize="16sp"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/modalBtnSubmitPengukuran"
                android:text="Simpan Pengukuran"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#0054A6"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ScrollView untuk konten utama -->
    <ScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F9FF"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header dengan PLN Logo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo_pln"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ELV 625 Monitoring - DAM BODY"
                    android:textColor="#0054A6"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- SECTION: Pilih Data Pengukuran -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih Data Pengukuran"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="4dp"/>

                    <Spinner
                        android:id="@+id/spinnerPengukuran"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@drawable/spinner_dropdown_background"
                        android:dropDownVerticalOffset="4dp"
                        android:dropDownWidth="match_parent"
                        android:spinnerMode="dropdown"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center_vertical|start"/>

                    <Button
                        android:id="@+id/btnPilihPengukuran"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Gunakan Pengukuran Ini"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="#0054A6"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION: DMA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DMA"
                        android:textColor="#0054A6"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#0054A6"
                        app:hintTextColor="#0054A6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputDMA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai DMA"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnSubmitDMA"
                        android:text="Simpan DMA"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0054A6"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION: HV-1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HV-1"
                        android:textColor="#0054A6"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#0054A6"
                        app:hintTextColor="#0054A6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputHV1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai HV-1"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnSubmitHV1"
                        android:text="Simpan HV-1"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0054A6"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION: HV-2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HV-2"
                        android:textColor="#0054A6"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#0054A6"
                        app:hintTextColor="#0054A6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputHV2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai HV-2"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnSubmitHV2"
                        android:text="Simpan HV-2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0054A6"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION: HV-3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HV-3"
                        android:textColor="#0054A6"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="#0054A6"
                        app:hintTextColor="#0054A6">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputHV3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nilai HV-3"
                            android:inputType="numberDecimal"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnSubmitHV3"
                        android:text="Simpan HV-3"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="#0054A6"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        style="@style/Widget.MaterialComponents.Button"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>