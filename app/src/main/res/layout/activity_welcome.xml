<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/welcomeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_corporate_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fadingEdgeLength="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- GHW Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="30dp">

                <!-- Badge Container -->
                <LinearLayout
                    android:id="@+id/badgeContainer"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle_white_glow"
                    android:gravity="center"
                    android:elevation="8dp"
                    android:alpha="0"
                    android:scaleX="0.8"
                    android:scaleY="0.8">

                    <ImageView
                        android:id="@+id/logoWelcome"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo_ghw"
                        android:contentDescription="Logo GHW - Geoteknik Hidrologi Waduk" />
                </LinearLayout>

                <!-- GHW Identity -->
                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="GEOTEKNIK HIDROLOGI WADUK"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:shadowColor="#33000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="6"
                    android:alpha="0"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:letterSpacing="0.03" />

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sistem Monitoring Terpadu untuk Aspek Geoteknik dan Hidrologi Waduk/Bendungan Operasional UBP Saguling"
                    android:textSize="14sp"
                    android:textColor="#E3F2FD"
                    android:alpha="0"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp" />

                <!-- Status Indicator -->
                <LinearLayout
                    android:id="@+id/statusIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/status_indicator_bg"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:alpha="0"
                    android:gravity="center">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_green"
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sistem Aktif dan Siap Digunakan"
                        android:textSize="12sp"
                        android:textColor="#E8F5E8"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="#4FFFFFFF"
                android:layout_marginVertical="8dp" />

            <!-- System Title Section -->
            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="SISTEM MONITORING TERPADU\nWADUK SAGULING"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:alpha="0"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03"
                android:paddingVertical="12dp"
                android:background="@drawable/section_title_bg"
                android:elevation="4dp" />

            <!-- Professional Menu Grid - FIXED TEXT ISSUE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="4dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMonitoringRembesan"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:alpha="0"
                        android:translationY="20dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_gradient_primary"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:background="@drawable/circle_white_20"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/ic_water"
                                    android:tint="#1A237E" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:gravity="center"
                                android:text="Rembesan"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:maxLines="2"
                                android:lineSpacingExtra="2dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardMonitoringTeknis"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:alpha="0"
                        android:translationY="20dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/card_gradient_secondary"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:background="@drawable/circle_white_20"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/ic_leak"
                                    android:tint="#1A237E" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Monitoring"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:maxLines="2"
                                android:lineSpacingExtra="2dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardLaporan"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:alpha="0"
                        android:translationY="20dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/card_gradient_accent"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:background="@drawable/circle_white_20"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/ic_input"
                                    android:tint="#1A237E" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Monitoring"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:maxLines="2"
                                android:lineSpacingExtra="2dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPengaturan"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_margin="6dp"
                        android:alpha="0"
                        android:translationY="20dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/card_gradient_neutral"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:background="@drawable/circle_white_20"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="26dp"
                                    android:layout_height="26dp"
                                    android:src="@drawable/ic_info"
                                    android:tint="#1A237E" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Monitoring"
                                android:textSize="14sp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:maxLines="2"
                                android:lineSpacingExtra="2dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <!-- GHW Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GEOTEKNIK HIDROLOGI WADUK (GHW)"
                    android:textSize="12sp"
                    android:textColor="#BBDEFB"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Unit Bisnis Pembangkitan Saguling"
                    android:textSize="11sp"
                    android:textColor="#90CAF9"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="v2.1.0 | Build 2024.12"
                    android:textSize="10sp"
                    android:textColor="#64B5F6"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>