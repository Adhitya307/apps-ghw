<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:padding="16dp"
            android:background="@drawable/header_background">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo_pln"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PT.PLN INDONESIA POWER UBP SAGULING"
                android:textColor="#0054A6"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- PILIH PENGUKURAN -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_measurement"
                        android:tint="#0054A6"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih Data Pengukuran"
                        android:textSize="18sp"
                        android:textColor="#0054A6"
                        android:textStyle="bold"/>
                </LinearLayout>

                <Spinner
                    android:id="@+id/spinnerPengukuran"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/spinner_background_modern"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"/>

                <Button
                    android:id="@+id/btnTampilkanData"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Tampilkan Data"
                    android:backgroundTint="#0054A6"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:stateListAnimator="@null"
                    android:elevation="2dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TMA -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_water"
                        android:tint="#0054A6"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TMA WADUK (mdpl)"
                        android:textColor="#0054A6"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTmaValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/data_background"
                    android:textColor="#0054A6"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- THOMSON -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardThomson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_flow"
                        android:tint="#0054A6"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THOMSON WEIR (mm)"
                        android:textColor="#0054A6"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvA1R"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A1R: --"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginBottom="8dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvA1L"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A1L: --"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginBottom="8dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvB1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B1: --"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvB3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B3: --"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:layout_marginBottom="8dp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tvB5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="B5: --"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SR -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_sr"
                        android:tint="#0054A6"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATA SR"
                        android:textColor="#0054A6"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/containerSR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- BOCORAN -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBocoran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_leak"
                        android:tint="#0054A6"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BOCORAN BARU"
                        android:textColor="#0054A6"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- Container untuk tabel bocoran -->
                <LinearLayout
                    android:id="@+id/containerBocoran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TOMBOL EXPORT DATABASE -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <Button
                    android:id="@+id/btnExportDB"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Export Database ke SQL"
                    android:backgroundTint="#28a745"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:stateListAnimator="@null"
                    android:elevation="2dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>